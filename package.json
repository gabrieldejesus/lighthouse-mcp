{
  "name": "pulse-mcp",
  "version": "1.0.0",
  "description": "MCP server for tracking web performance with Lighthouse",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pulse-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrieldejesus/pulse-mcp.git"
  },
  "keywords": [
    "mcp",
    "lighthouse",
    "performance",
    "web",
    "web-performance",
    "chromium",
    "core-web-vitals"
  ],
  "author": "Gabriel de Jesus",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/gabrieldejesus/pulse-mcp/issues"
  },
  "homepage": "https://github.com/gabrieldejesus/pulse-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "chrome-launcher": "^1.2.1",
    "lighthouse": "^13.0.3",
    "simple-git": "^3.31.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
